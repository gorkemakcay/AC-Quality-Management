<body>
    <div class="printButton">
        <button onclick="javascript:window.print();"><i class="fas fa-print"></i></button>
    </div>
    <div class="pdfDocument">
        <div class="pdfHeader">
            <div class="companyLogo">
                <img src="~/img/AC.png" />
            </div>
            <div class="headerText">
                <p class="turkishText">FİNAL KALİTE KONTROL FORMU</p>
                <br />
                <p class="englishText" style="font-style:italic !important;">Final Quality Control Form</p>
            </div>
        </div>
        <div class="qualityInfo">
            <div class="qualityRow">
                <div class="qualityCol1">
                    <p class="qLabel">Müşteri Adı:<br /><small style="font-weight:normal;font-size:small;font-style:italic">Customer</small></p>
                    <p class="qText">@Model.Customer</p>
                </div>
                <div class="qualityCol2">
                    <p class="qLabel">İş Emri No:<br /><small style="font-weight:normal;font-size:small;font-style:italic">Work Order No</small></p>
                    <p class="qText">@Model.WorkOrderNo</p>
                </div>
            </div>
            <div class="qualityRow">
                <div class="qualityCol1">
                    <p class="qLabel">Malzeme Adı:<br /><small style="font-weight:normal;font-size:small;font-style:italic">Material Name</small></p>
                    <p class="qText">@Model.MaterialName</p>
                </div>
                <div class="qualityCol2">
                    <p class="qLabel">Teknisyen Adı:<br /><small style="font-weight:normal;font-size:small;font-style:italic">Technician Name</small></p>
                    <p class="qText">@Model.TechnicianName</p>
                </div>
            </div>
            <div class="qualityRow">
                <div class="qualityCol1">
                    <p class="qLabel">Malzeme Kodu:<br /><small style="font-weight:normal;font-size:small;font-style:italic">Material Code</small></p>
                    <p class="qText">@Model.MaterialCode</p>
                </div>
                <div class="qualityCol2">
                    <p class="qLabel">Kabul Tarihi:<br /><small style="font-weight:normal;font-size:small;font-style:italic">Acceptance Date</small></p>
                    <p class="qText">@Model.AcceptanceDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="qualityRow">
                <div class="qualityCol1">
                    <p class="qLabel">Parti Durumu:<br /><small style="font-weight:normal;font-size:small;font-style:italic">Lot Status</small></p>
                    <p class="qText">@Model.LotStatus</p>
                </div>
                <div class="qualityCol2">
                    <p class="qLabel">İstasyon Numarası:<br /><small style="font-weight:normal;font-size:small;font-style:italic">Station No</small></p>
                    <p class="qText">@Model.StationNo</p>
                </div>
            </div>
            <div class="qualityRow">
                <div class="qualityCol1">
                    <p class="qLabel">İstasyon Adı:<br /><small style="font-weight:normal;font-size:small;font-style:italic">Station Name</small></p>
                    <p class="qText">@Model.StationName</p>
                </div>
                <div class="qualityCol2">
                    <p class="qLabel">Test Numarası:<br /><small style="font-weight:normal;font-size:small;font-style:italic">Test No</small></p>
                    <p class="qText">@Model.TestNo</p>
                </div>
            </div>
            <div class="qualityRow">
                <div class="qualityCol1">
                    <p class="qLabel" style="font-size:14px !important;">Sipariş Termin Tarihi:<br /><small style="font-weight:normal;font-size:small;font-style:italic">Delivery Date</small></p>
                    <p class="qText">@Model.DeliveryDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="specificationRow" style="font-weight:bold;background-color:white;color:#006EB7">
                Özellikler / <small style="font-style:italic;">Specificaitons</small>
            </div>
            <div class="specificationRow">
                <div class="specificationHeaderCol1">
                    <p style="font-weight:bold;font-size:11px;float:left;margin-top:0;">Kontrol Noktası /<small style="font-weight:normal;font-size:10px;font-style:italic;">Control Point</small></p>
                </div>
                <div class="specificationHeaderCol2">
                    <p style="font-weight:bold;font-size:11px;margin-top:0;">Durum/<small style="font-weight:normal;font-size:10px;font-style:italic;">Status</small></p>
                </div>
                <div class="specificationHeaderCol3">
                    <p style="font-weight:bold;font-size:11px;margin-top:0;">Açıklama /<small style="font-weight:normal;font-size:10px;font-style:italic;">Explain</small></p>
                </div>
                <div class="specificationHeaderCol4">
                    <p style="font-weight:bold;font-size:11px;float:left;margin-top:0;">Düzenleyici Faaliyet /<small style="font-weight:normal;font-size:9px;font-style:italic;">Corrective Activity</small></p>
                </div>
            </div>
