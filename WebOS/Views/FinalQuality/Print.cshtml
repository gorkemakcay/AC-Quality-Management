            <div class="revisionRow" style="font-weight:bold;background-color:white;color:#006EB7;vertical-align: middle;">
                Revizyonlar / <small style="font-style:italic">Revisions</small>
            </div>
            <div class="revisionRow">
                <div class="revisionHeaderCol1">
                    <p style="font-weight:bold;font-size:11px;float:left;margin-top:0;">Revizyon Konusu /<small style="font-weight:normal;font-size:10px;font-style:italic;">Revision Explain</small></p>
                </div>
                <div class="revisionHeaderCol2">
                    <p style="font-weight:bold;font-size:11px;margin-top:0;">Revizyon Tarihi/<small style="font-weight:normal;font-size:10px;font-style:italic;">Revision Date</small></p>
                </div>
                <div class="revisionHeaderCol3">
                    <p style="font-weight:bold;font-size:11px;margin-top:0;">Revizyon Yapılma Nedeni /<small style="font-weight:normal;font-size:10px;font-style:italic;">Reason For Revision</small></p>
                </div>
                <div class="revisionHeaderCol4">
                    <p style="font-weight:bold;font-size:11px;float:left;margin-top:0;">Sonuç /<small style="font-weight:normal;font-size:9px;font-style:italic;">Result</small></p>
                </div>
            </div>
            @foreach (var item in Model.Revisions)
            {
                <div class="revisionRow">
                    @if (item.RevisionExplain != null)
                    {
                        <div class="revisionHeaderCol1">@item.RevisionExplain</div>
                    }
                    else
                    {
                        <div class="revisionHeaderCol1">-</div>
                    }
                    @if (item.RevisionExplain != null)
                    {
                        <div class="revisionHeaderCol2">@item.RevisionDate.ToString("dd/MM/yyyyy")</div>
                    }
                    else
                    {
                        <div class="revisionHeaderCol2">-</div>
                    }
                    @if (item.ReasonForRevision != null)
                    {
                        <div class="revisionHeaderCol3">@item.ReasonForRevision</div>
                    }
                    else
                    {
                        <div class="revisionHeaderCol3">-</div>
                    }
                    @if (item.RevisionResult != null)
                    {
                        <div class="revisionHeaderCol4">@item.RevisionResult</div>
                    }
                    else
                    {
                        <div class="revisionHeaderCol4">-</div>
                    }
                </div>
            }

            <div class="explainRow">
                <div class="explainHeader" style="font-weight:bold;background-color:white;color:#006EB7;vertical-align:central">
                    Açıklamalar / <small style="font-style:italic;">Explains</small>
                </div>
                <div class="explainText">@Model.EngineersNote</div>
            </div>
            <div class="approvalRow">
                <div class="approvalDate" style="font-weight:bold;">Onay Tarihi</div>
                <div class="approvalBy" style="font-weight:bold;">Onaylayan</div>
                <div class="approvalSignature" style="font-weight:bold;">İmza</div>
            </div>
            <div class="approvalRow">
                <div class="approvalDate"><small style="font-size:smaller;font-style:italic;">Approval Date</small></div>
                <div class="approvalBy"><small style="font-size:smaller; font-style: italic;">Approval By</small></div>
                <div class="approvalSignature"><small style="font-size:smaller; font-style: italic;">Signature</small></div>
            </div>
            <div class="approvalRow">
                <div class="approvalDate">@Model.ApprovalDate.ToString("dd/MM/yyyyy")</div>
                <div class="approvalBy">@Model.ApprovalBy</div>
                <div class="approvalSignature">@Model.Signature</div>
